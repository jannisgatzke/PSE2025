const mongoose = require("mongoose");
const Joi = require("joi");

const questionnSchema = new mongoose.Schema({
    question: String,
    author : String,
    rigthAnswers: [String],
    wrongAnswers: [String],
    explanation: String,
    kurs: String
})

function validateQuestion(question){
    const schema= Joi.object({
        question: Joi.string().min(1).max(255).required(),
        author: Joi.string().min(1).max(255).required(),
        rigthAnswers: Joi.array().items(Joi.string().min(1).max(255).required()),
        wrongAnswers: Joi.array().items(Joi.string().min(1).max(255).required()),
        explanation: Joi.string().min(5).max(255),
        kurs: Joi.string().min(5).max(255)
    })
    return schema.validate(question);
}

const Question = mongoose.model("Question", questionnSchema);

exports.Question = Question;
exports.validateQuestion = validateQuestion;
